#include "sun8i-v3s-licheepi-zero.dts"
#include <dt-bindings/input/input.h>

/ {
	model = "Lichee Pi Zero with Dock";
	compatible = "licheepi,licheepi-zero-dock", "licheepi,licheepi-zero",
		     "allwinner,sun8i-v3s";

	aliases {
		ethernet0 = &emac;
	};

	leds {
		/* The LEDs use PG0~2 pins, which conflict with MMC1 */
		status = "disabled";
	};
	chosen {
            /delete-node/framebuffer@0;
    };

	backlight: backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm 0 1000000 0>;
		brightness-levels = <0 30 40 50 60 70 100>;
		default-brightness-level = <6>;
		status = "okay";
	};

	panel: panel {
		compatible = "urt,umsh-8596md-t", "simple-panel";
		#address-cells = <1>;
		#size-cells = <0>;
		status = "disabled";

		port@0 {
			reg = <0>;
			backlight = <&backlight>;
			#address-cells = <1>;
			#size-cells = <0>;

			panel_input: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&tcon0_out_lcd>;
			};
		};
	};
};

&cedarx {
	status = "okay";
};

&ion {
	status = "okay";
};

&codec {
	allwinner,audio-routing =
		"Headphone", "HP",
		"Headphone", "HPCOM",
		"MIC1", "Mic",
		"Mic",  "HBIAS";
	status = "okay";
};

&emac {
	phy-handle = <&int_mii_phy>;
	phy-mode = "mii";
	allwinner,leds-active-low;
	status = "okay";
};

&mmc1 {
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "disabled";
};

&lradc {
	vref-supply = <&reg_vcc3v0>;
	status = "okay";

	button-200 {
		label = "Volume Up";
		linux,code = <KEY_VOLUMEUP>;
		channel = <0>;
		voltage = <200000>;
	};

	button-400 {
		label = "Volume Down";
		linux,code = <KEY_VOLUMEDOWN>;
		channel = <0>;
		voltage = <400000>;
	};

	button-600 {
		label = "Select";
		linux,code = <KEY_SELECT>;
		channel = <0>;
		voltage = <600000>;
	};

	button-800 {
		label = "Start";
		linux,code = <KEY_OK>;
		channel = <0>;
		voltage = <800000>;
	};
};

&i2c0 {
	gt911: touchscreen@14 {
		status = "disabled";
        compatible = "goodix,gt911";
        reg = <0x5d>;
        interrupt-parent = <&pio>;
        interrupts = <1 5 IRQ_TYPE_EDGE_FALLING>; /* (PB5) */
        pinctrl-names = "default";
        irq-gpios = <&pio 1 5 GPIO_ACTIVE_HIGH>; /* (PB5) */
        reset-gpios = <&pio 2 1 GPIO_ACTIVE_HIGH>; /* RST (PC1) */
        /* touchscreen-swapped-x-y */
    };
};

&de {
	status = "default";
};

&pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm0_pins>;
	status = "default";
};

&tcon0 {
	pinctrl-names = "default";
	pinctrl-0 = <&lcd_rgb666_pins_a>;
	status = "disabled";  //incase of use CSI function
};

&tcon0_out {
	tcon0_out_lcd: endpoint@0 {
		reg = <0>;
		remote-endpoint = <&panel_input>;
	};
};

&csi1 {
	status = "okay";
    pinctrl-names = "default";
    pinctrl-0 = <&csi1_clk &csi1_8bit>;

	port {
	csi1_ep: endpoint {	
		remote-endpoint = <&ov5640_ep>;
		bus-width = <8>;
		hsync-active = <0>;
		vsync-active = <0>;
	    pclk-sample = <1>;
		};
	};

	/* if use OV2640 */
	// port {
	// csi1_ep: endpoint {
	// 	remote-endpoint = <&ov2640_ep>;
	// 	bus-width = <12>;
	// 	hsync-active = <0>;
	// 	vsync-active = <0>;
	//     pclk-sample = <1>;
	// 	};
	// };
 };

	

&i2c1 {
	pinctrl-0 = <&i2c1_pins>;
	pinctrl-names = "default";
	status = "okay";

	ov2640: camera@30 {
	compatible = "ovti,ov2640";
	reg = <0x30>;
	pinctrl-0 = <&csi1_mclk>;
	pinctrl-names = "default";
	clocks = <&ccu CLK_CSI1_MCLK>;
	clock-names = "xvclk";
	assigned-clock-rates = <24000000>;

		port {
			ov2640_ep: endpoint {
				remote-endpoint = <&csi1_ep>;
				bus-width = <10>;
				hsync-active = <0>;
				vsync-active = <0>;
				pclk-sample = <1>;
			};
		};
	};

	ov5640: camera@3c {
		compatible = "ovti,ov5640";
		reg = <0x3c>;
		pinctrl-0 = <&csi1_mclk>;
		pinctrl-names = "default";
		clocks = <&ccu CLK_CSI1_MCLK>;
		clock-names = "xclk";
		assigned-clocks = <&ccu CLK_CSI1_MCLK>;
		assigned-clock-rates = <24000000>;

		port {
			ov5640_ep: endpoint {
				remote-endpoint = <&csi1_ep>;
				bus-width = <8>;
				hsync-active = <0>;
				vsync-active = <0>;
				pclk-sample = <1>;
			};
		};
	};

};


&pio {
	csi1_8bit: csi1-8bit@0 {
	       pins 	 = "PE6","PE7","PE8","PE9","PE10","PE11","PE12","PE13","PE14","PE15";
	       bias-disable;
	       function = "csi";
    };

	csi1_clk: csi1-clk@0 {
	        pins = "PE0","PE2","PE3";
	        bias-disable;
	        function = "csi";
    };
    
    csi1_mclk: csi1-mclk@0 {
	        pins = "PE1";
	        bias-disable;
	        function = "csi";
    };

};


&spi0{
	status = "okay";
	st7789v:st7789v@0{
		compatible = "sitronix,st7789v";
		reg = <0>;
		spi-max-frequency = <35000000>;
		dc = <&pio 1 5 GPIO_ACTIVE_HIGH>;
		reset = <&pio 1 4 GPIO_ACTIVE_HIGH>;	//PB5
		rotation = <270>;
		buswidth =<8>; 
		rgb;
		spi-cpol;
		spi-cpha;
		fps = <60>;
		debug = <0x0>;
		width = <240>;
        height= <240>;
		status = "okay";
	};

};
